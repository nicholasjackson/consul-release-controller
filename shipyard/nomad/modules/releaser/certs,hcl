exec_local "generate_certs" {
  cmd = "shipyard"
  args = [
    "connector",
    "generate-certs",
    "--leaf",
    "--root-ca",
    "./root.cert",
    "--root-key",
    "./root.key",
    "--dns-name",
    "127.0.0.1:9443",
    "${data("nomad_data")}",
  ]

  working_directory = "${shipyard()}/certs"

  timeout = "30s"
}